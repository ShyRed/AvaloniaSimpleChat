<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="TextBlock.chat-message">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Foreground" Value="{DynamicResource ChatMessageText}"/>
    </Style>

    <Style Selector="TextBlock.chat-username">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="5 5 5 0"/>
        <Setter Property="Foreground" Value="{DynamicResource ChatUsernameText}"/>
    </Style>

    <Style Selector="Border.chat-bubble">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="{DynamicResource ChatMessageBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ChatMessageBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</Styles>
